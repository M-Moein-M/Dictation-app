<div class="container">
  <div class="row justify-content-center mt-5">
    <h1>Signup</h1>
  </div>
  <div class="row justify-content-center mt-5">

    <form action="/signup" method="POST" id="signup-form">
      {{#each signupErrors}}
      <div class="alert alert-danger" role="alert">
        {{this}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      {{/each}}

      <div class="form-group">
        <label for="Email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="email" spellcheck="false"
          required placeholder="Enter your email" value={{#if email}} {{email}} {{/if}}>
      </div>

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" spellcheck="false" autocomplete="off" class="form-control" id="username" name="username"
          required aria-describedby="username" placeholder="Enter an username for your account" value={{#if username}}
          {{username}} {{/if}}>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Enter you password"
          required>
      </div>

      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </div>
</div>